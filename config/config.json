{
  "monitoring": {
    "check_interval_seconds": 5,
    "minimum_play_duration_seconds": 15
  },
  "playlist": {
    "name": "AutoDiscovered Songs",
    "description": "Automatisch hinzugefügte Songs basierend auf Hörverhalten"
  },
  "service": {
    "max_retries": 10,
    "retry_delay_seconds": 10,
    "health_check_interval_seconds": 30,
    "max_health_failures": 3,
    "restart_delay_seconds": 60
  },
  "callback_server": {
    "host": "127.0.0.1",
    "port": 4444,
    "timeout_seconds": 300,
    "debug": false
  },
  "oauth": {
    "scope": "user-read-currently-playing user-read-playback-state playlist-modify-public playlist-modify-private playlist-read-private user-library-read",
    "state_length": 16
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)8s - %(funcName)s:%(lineno)d - %(message)s",
    "file_enabled": true,
    "log_directory": "logs",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "console_enabled": true,
    "services": {
      "discovery": {
        "level": "INFO",
        "file_enabled": true
      },
      "callback": {
        "level": "INFO",
        "file_enabled": true
      },
      "watchdog": {
        "level": "INFO",
        "file_enabled": true
      },
      "main": {
        "level": "INFO",
        "file_enabled": true
      },
      "email_notifier": {
        "level": "DEBUG",
        "file_enabled": true
      },
      "auth": {
        "level": "INFO",
        "file_enabled": true
      },
      "playlist": {
        "level": "INFO",
        "file_enabled": true
      },
      "service_manager": {
        "level": "INFO",
        "file_enabled": true
      }
    }
  },
  "watchdog": {
    "enabled": true,
    "check_interval_seconds": 30,
    "max_restart_attempts": 3,
    "restart_cooldown_seconds": 60,
    "failure_notification_enabled": true,
    "services_to_monitor": ["discovery", "callback"]
  },
  "email_notifications": {
    "enabled": true,
    "smtp_server": "",
    "smtp_port": 587,
    "use_tls": true,
    "sender_email": "",
    "sender_password": "",
    "recipient_email": "",
    "subject_prefix": "[Spotify Bot Alert]"
  }
}
